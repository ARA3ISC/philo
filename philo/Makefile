NAME = philo
CC = @cc
RM = rm -f
CFLAGS = -Werror -Wextra -Wall
SRC = philo.c utils.c utils1.c error.c
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME):$(OBJ)
	@make -C costumizing/
# @echo "\033[0;32m\nğŸ›    Compiling philo...   ğŸ› "
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
# -fsanitize=address
	@echo "âœ… 	Done!	  âœ…\n"

clean:
	@echo "\033[0;31m\nâŒ  Deleting objects...   âŒ"
	@$(RM) $(OBJ)
	@echo "\033[0m"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[0;31mâŒ  Deleting executable... âŒ"
	@$(RM) $(NAME)
	@$(RM) $(B_NAME)
	@echo "\nâœ”ï¸âœ”ï¸âœ”ï¸  Deleted successfuly   âœ”ï¸âœ”ï¸âœ”ï¸ \n\033[0m"

re: fclean all
