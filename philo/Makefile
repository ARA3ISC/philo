NAME = philo
CC = @cc
RM = rm -f
CFLAGS = -Werror -Wextra -Wall
SRC = philo.c utils.c error.c
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME):$(OBJ)
	@echo "\033[0;32m\nğŸ›    Compiling philo...   ğŸ› "
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "\nâœ…âœ…âœ…   Done!   âœ…âœ…âœ…\n"

clean:
	@echo "\033[0;31m\nâŒâŒâŒ  Deleting objects...    âŒâŒâŒ"
	@$(RM) $(OBJ)
	@echo "\033[0m"

fclean: clean
	@$(RM) $(NAME)
	@echo "\033[0;31mâŒâŒâŒ  Deleting executable... âŒâŒâŒ"
	@$(RM) $(NAME)
	@$(RM) $(B_NAME)
	@echo "\nâœ”ï¸âœ”ï¸âœ”ï¸     Deleted successfuly      âœ”ï¸âœ”ï¸âœ”ï¸ \n\033[0m"

re: fclean all
